print("Welcome to the rollercoaster!")

height = int(input("What is your height in cm? :  "))
rider = False
age = int(input("What is your age? : "))

if height > 120:
    print("You can ride the ride!")
    rider = True

    if age >= 18:
        print("Please pay $12.")
    elif 12 < age < 18:
        print("Please pay $7.")
    else:
        print("Please pay $5.")
   
else:
    print("Sorry, you have to grow taller!")



